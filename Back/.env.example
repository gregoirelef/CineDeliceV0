# --- Configuration serveur ---
PORT=3000                         # Port sur lequel le serveur Express écoute
BASE_URL=https://localhost         # URL de base du back-end (API)

# --- Configuration base de données PostgreSQL ---
PG_HOST=adresseduserveur          # Adresse du serveur PostgreSQL (ex: localhost ou nom du conteneur)
PG_USER=nomdutilisateur           # Nom d'utilisateur PostgreSQL
PG_DATABASE=nomdelabase           # Nom de la base de données PostgreSQL
PG_URL=postgres://user:password@localhost:5432/databaseName  # URL complète de connexion PostgreSQL

# --- Sécurité / JWT ---
JWT_SECRET=DemandeALequipe        # Clé secrète pour signer les JWT d'accès
JWT_REFRESH_SECRET=DemandeALequipe # Clé secrète pour signer les JWT de refresh

# --- Environnement ---
NODE_ENV=production                     # Environnement d'exécution (dev, prod, etc.)

# --- Configuration email (pour nodemailer) ---
MAIL_ADMIN=delicecine@gmail.com   # Adresse email de l'admin (expéditeur)
MAIL_PASS=demandeAladmin@test     # Mot de passe ou app password pour l'email

# --- Configuration front-end ---
FRONT_URL=https://localhost:5173   # URL du front-end (React/Vite)

# --- Configuration CORS ---
CORS_ORIGINS=https://localhost:4173,https://localhost:5173,